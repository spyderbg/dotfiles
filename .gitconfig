[user]
	email = chernev@beastburst.com
	name = Spyder
[difftool "sourcetree"]
	cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
[alias]
	s = status
	st = status -sb
	b = branch
	ba = branch -a
	bd = branch -d
	bd = branch -D
	ci = commit --verbose
	cl = config --local
	co = checkout
	df = diff
	dc = diff --cached
	re = reset --soft HEAD
	unstage=reset HEAD --	
	su = submodule update --init --recursive
	ss = submodule status
	l = log
	lg = log --pretty='format:%h %C(bold blue)%ar %C(bold green)%s %C(yellow)%an'
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	last = log -1 HEAD
	graph = log --graph --abbrev-commit --decorate --date=relative --full-history --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold blue)%an%C(reset)%C(bold yellow)%d%C(reset)'
[color]
	ui = true
[core]
	autocrlf = false
	excludesFile = /home/spyder/.gitignore_global
	editor = vim
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	sslVerify = false
